@model Contramcamlamroi.Models.Cart

@{
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_ShowCartLayout.cshtml";
}
<div style="margin-top: 10%; ">
    <h2>Giỏ Hàng</h2>
    <a href="@Url.Action("Index","Product")">Tiếp tục mua hàng</a>
    <div style="margin-left:-1%;margin-top:1%;">
        @if (Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align: center;">Tên Sản Phẩm</th>
                        <th style="text-align: center;">Hình Sản Phẩm</th>
                        <th style="text-align: center;">Giá</th>
                        <th style="text-align: center;">Số lượng</th>
                        <th style="text-align: center;">Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        decimal total = item._quantity * (decimal)item._product.Price.Value;
                        <tr>
                            <td>@Html.DisplayFor(model => item._product.NamePro)</td>
                            <td><img src="@Url.Content(item._product.ImagePro)" height="150" width="150" /></td>
                            <td>@Html.DisplayFor(model => item._product.Price) </td>
                            <td>
                                @using (Html.BeginForm("Update_Cart_quantity", "ShoppingCart"))
                                {
                                    <input type="hidden" value="@item._product.ProductID" name="idPro" />
                                    <input type="number" value="@item._quantity " name="cartQuantity" />
                                    <input type="submit" value="Update" />

                                }
                            </td>
                            <td>@total</td>
                            <td>
                                <a href="/ShoppingCart/RemoveCart/@item._product.ProductID"><div class="btn btn-default">Xóa</div></a>
                            </td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" style="text-align:center; margin-right:1%;">Tổng Tiền: @Model.Total_money()</td>
                    </tr>
                    <tr>
                        <td colspan="2"></td>
                        <td colspan="4">
                            <div style="right:50%;">
                                @using (Html.BeginForm("CheckOut", "ShoppingCart"))
                                {
                                    <table style="border-collapse:separate;border-spacing:5px;">
                                        <tr>
                                            <td>Code Customer:</td>
                                            <td><input type="number" name="CodeCustomer" required /></td>
                                        </tr>
                                        <tr>
                                            <td>AddressDelivery:</td>
                                            <td><input type="text" name="AddressDelivery" required /></td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <input type="submit" value="CheckOut" class="btn btn-success" />
                                                <a href="@Url.Action("Create","Customer")" class="btn btn-success">Register</a>
                                            </td>
                                        </tr>
                                    </table>
                                }
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        }
    </div>
</div>
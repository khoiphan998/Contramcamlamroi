<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
  
    
    <style>
       
        #animation-top5 {
            color: white;
            text-shadow: 1px 1px 2px gray, 0 0 25px red, 0 0 5px red;
        }

        input[type="number"] {
            height: 20px;
        }
        /*.div-footer {
            position: fixed;
            text-align: center;
            bottom: 0;
            left: 0;
            padding-top: 15px;
            height: 50px;
            width: 100%;
            background-color: forestgreen;
        }*/

        li.format-hello {
            padding-top: 15px;
            color: white;
        }

        .navbar-inverse {
            background-color: green;
        }


            .navbar-inverse .navbar-nav > li > a {
                color: black;
                font-size: 14px;
            }

        form {
            display: -webkit-inline-box;
        }

        input[type=text] {
            width: 200px;
            -webkit-transition: width 0.4s ease-in-out;
            transition: width 0.4s ease-in-out;
        }

        /* When the input field gets focus, change its width to 100% */
        .search-product-price input[type=text]:focus {
            width: 400px;
            height: 35px;
        }

        input, select, textarea {
            max-width: 800px;
            height: 35px;
            background: #fff;
            -webkit-box-shadow: none;
            box-shadow: none;
            -webkit-transition: all 0.5s;
            transition: all 0.5s;
            border: solid 1px black;
        }

            input[type="text" i] {
                padding: 1px 2px;
                margin-top: 10px;
                border-radius: 5px;
            }

        td, th {
            padding-right: 10px;
        }

        input[type="submit"] {
            -webkit-appearance: button;
            cursor: pointer;
            margin-top: 10px;
        }
        input[type="submit"] {
            -webkit-appearance: button;
            cursor: pointer;
            margin-top: 10px;
            border: 1px solid green;
            border-radius: 10px;
            background: green;
            color: white;
            margin: 5px;
        }
        input[type="number"] {
            height: 30px;
            padding: 1px 2px;
            margin-top: 10px;
            border-radius: 5px;
            border: 2px solid #73AD21;
        }

        .col-md-10 {
            width: 50%;
        }

        .col-md-1, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-10, .col-md-9, .col-md-11, .col-md-12 {
            float: left;
            text-align: center;
            padding: 10px;
        }

        .col-md-2 {
            width: 15%;
            margin-left: 8%;
        }

        span.badge {
            float: right;
            margin-right: -8px;
        }

        .card-pro {
            border: 1px solid #BFBFBF;
            height: auto;
            border-radius: 10px;
            padding: 10px;
        }
        #myBtn {
            display: none; /* Hidden by default */
            position: fixed; /* Fixed/sticky position */
            bottom: 20px; /* Place the button at the bottom of the page */
            right: 30px; /* Place the button 30px from the right */
            z-index: 99; /* Make sure it does not overlap */
            border: none; /* Remove borders */
            outline: none; /* Remove outline */
            background-color: red; /* Set a background color */
            color: white; /* Text color */
            cursor: pointer; /* Add a mouse pointer on hover */
            padding: 15px; /* Some padding */
            border-radius: 10px; /* Rounded corners */
            font-size: 18px; /* Increase font size */
        }

            #myBtn:hover {
                background-color: #555; /* Add a dark-grey background on hover */
            }
    </style>
</head>
<body>
  
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VEGEFOODS", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Product")</li>
                    <li>@Html.ActionLink("Kênh người bán", "LoginAdmin", "Admin")</li>
                    <li>@Html.ActionLink("Liên hệ ", "Contact", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">

                    <li><a href="/LoginUser/RegisterUser"><span class="glyphicon glyphicon-user"></span>  Đăng Kí</a></li>
                    <li><a href="/LoginUser/Index"><span class="glyphicon glyphicon-user"></span>  Đăng Nhập</a></li>
                    <li><a href="@Url.Action("LogOutUser","LoginUser")"> Đăng xuất</a></li>
                    <li class="format-hello">
                        @if (Session["NameUser"] == null)
                        {
                            <span> Hello</span>
                        }

                        else
                        {
                            <span> <text> Hello </text> <a href="@Url.Action("Index_Admin","Product")">@Session["NameUser"]</a></span>
                        }
                    </li>

                </ul>

            </div>
            <div class="search-product-price" style="text-align: center">
                @using (Html.BeginForm("Search", "Product"))
                {
                    <input type="text" name="_name" placeholder="Bạn tìm cấy chi rứa?...">
                    <input type="submit" value="Tìm" style="background-color: green; color: white; border-color: white; border-style: solid; border-width: 1px; border-radius: 3px; background-color: lawngreen; -webkit-box-shadow: 0px 1px 4px rgb(0 0 0 / 20%); box-shadow: 0px 1px 4px rgb(0 0 0 / 20%); " />
                }
                <span style="float:right;">
                    <a href="/ShoppingCart/ShowCart">
                        <img src="@Url.Content("~/Content/images/cart.png")" style="height:30px;width:30px;margin-top:10px;" />
                    </a>
                </span>
                @Html.Action("BagCart", "ShoppingCart")

            </div>
        </div>

    </div>

    <div class="row" style="margin-top:10px;height:auto;">
        <div class="col-md-12" style="width:80%;margin-left:10%;">
            <ul style="text-decoration:none;background-color:greenyellow;margin-top:20px;list-style-type:none;padding:10px;">
                <li><a href="/OrderDetail/GroupByTop5" style="color:white;" id="animation-top5">Top 5 sản phẩm bán chạy nhất</a></li>
                <li style="background-color:lightgray"></li>
            </ul>
        </div>
        <div class="col-md-2" style="margin-top:-1%;margin-left:10%;">
            @{ Html.RenderAction("CategoryPartial", "Categories");}
        </div>

        <div class="col-md-10" id="div-content" style="margin-left:2%;">
            <div class="slideshow-container">

            </div>
            @RenderBody()
        </div>
    </div>

    @*@ <div class="div-footer">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>*@
    @*@<footer style=" background-color: forestgreen;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

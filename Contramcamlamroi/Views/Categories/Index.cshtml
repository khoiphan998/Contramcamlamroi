@model IEnumerable<Contramcamlamroi.Models.Category>
@{
    ViewBag.Title = "Index";
}
<h1>DANH MỤC SẢN PHẨM</h1>
<p>
    @Html.ActionLink("Thêm sản phẩm mới", "Create")
</p>
<table class="table table-bordered" style="border-width:thick">
    <tr>
        <th> Mã Loại </th>
        <th> Tên Loại Sản Phẩm </th>
        <th>   </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


@model IEnumerable<Contramcamlamroi.Models.ViewModel>

@{
    ViewBag.Title = "GroupByTop5";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách 5 Sản Phẩm Bán Chạy Nhất</h2>
<table class="table-bordered">
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Hình Sản Phẩm</th>
        <th>Giá</th>
        <th>Tổng Số lượng</th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => i.IDPro)</td>
            <td>@Html.DisplayFor(model => i.NamePro)</td>
            <td><img src="@Url.Content(i.ImgPro)" height="150" width="150" /></td>
            <td>@Html.DisplayFor(model => i.pricePro)</td>
            <td>@Html.DisplayFor(model => i.Sum_Quantity)</td>
            <td><a href="/ShoppingCart/AddToCart/@i.IDPro" class="btn btn-default">Buy</a></td>
        </tr>
    }
</table>

